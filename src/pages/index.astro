---
import { Image } from "astro:assets";

const LINKS = [
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/vinit-sarvade",
    icon: import("../assets/LinkedIn.svg"),
  },
  {
    name: "GitHub",
    url: "https://github.com/VinitSarvade",
    icon: import("../assets/Github.svg"),
  },
  {
    name: "Email",
    url: "mailto:vinit.sarvade.08@gmail.com",
    icon: import("../assets/Email.svg"),
  },
  {
    name: "Resume",
    url: "https://storage.rxresu.me/clp9fxdx67mxa9hunja3wei9z/resumes/clp9kx9ve0opn5499x11gd8vb.pdf",
    icon: import("../assets/Resume.svg"),
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="author" content="Vinit Sarvade" />
    <meta name="description" content="Vinit Sarvade's Portfolio" />
    <meta name="keywords" content="Vinit Sarvade, Portfolio" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon/favicon-16x16.png"
    />
    <link rel="manifest" href="/favicon/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <title>Vinit Sarvade</title>
  </head>
  <body class="flex flex-col min-h-dvh justify-center items-center gap-3 p-5">
    <h1 class="text-4xl sm:text-6xl font-semibold text-center tracking-wide">
      Hi! I'm Vinit Sarvade
    </h1>

    <div class="flex flex-col sm:flex-row item-center">
      <h2 class="text-xl sm:text-2xl text-center">Full Stack Engineer</h2>
      <h2 class="text-xl sm:text-2xl hidden sm:block">&nbsp;&middot;&nbsp;</h2>
      <h2 class="text-xl sm:text-2xl text-center">7+ years of experience</h2>
    </div>

    <div class="flex flex-row items-center gap-10 mt-8">
      {
        LINKS.map((link) => (
          <a href={link.url} target="_blank" rel="noreferrer" title={link.name}>
            <Image
              src={link.icon}
              alt={link.name}
              width="24"
              height="24"
              densities={[1, 2, 3]}
            />
          </a>
        ))
      }
    </div>
  </body>
</html>
